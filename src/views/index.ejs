<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
  <div class="row">
    <div class="cow-lg-2"></div>

    <div class="cow-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

    </div>

    <%  include('includes/messages') %>    

    <% if (contatos.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <tr>
            <td >Nome</td>
            <td >Sobrenome</td>
            <td >Telefone</td>
            <td >Email</td>
          </tr>
          <% contatos.forEach(contato => { %>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone %></td>
            <td><%= contato.email %></td> 
            <td><a class="link-primary " href="/contato/index/<%= contato._id %>">Editar contato</a></td>
            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
          </tr>
          <% }); %>
          <tr>
  
        </table>
      </div>
      <% } else { %>
          <p class="text-center lead">Não existem contatos na sua agenda </p>
      <% } %>
    

  </div>
</div>

<%- include('includes/footer') %>
