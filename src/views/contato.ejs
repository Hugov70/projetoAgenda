<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
  <div class="row">
    <div class="cow-lg-2"></div>

    <div class="cow-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo</p>

    </div>

    <%  include('includes/messages') %>   
    <% if(contato._id) { %> 
    <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="post">
    <% } else { %>
    <form class="form-contato" action="/contato/register" method="post">
    <% } %>
      <div class="mb-3">
        <label>Nome</label>
        <input value="<%= contato.nome %>"  type="text" class="form-control"  name="nome" id="exampleInputEmail1">
      </div>
      <div class="mb-3">
        <label>Sobrenome</label>
        <input value="<%= contato.sobrenome %>" type="text" class="form-control"  name="sobrenome" id="exampleInputEmail1">
      </div>
      <div class="mb-3">
        <label>Email</label>
        <input value="<%= contato.email %>" type="email" class="form-control"  name="email" id="exampleInputEmail1">
      </div>
      <div class="mb-3">
        <label>Telefone</label>
        <input value="<%= contato.telefone %>" type="tel" class="form-control"  name="telefone" id="exampleInputEmail1">
      </div>

      <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

    
    <div class="cow-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
